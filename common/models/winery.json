{
  "name": "Winery",
  "plural": "Wineries",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "lang": {
      "type": "string",
      "required": true,
      "default": "zh"
    }
  },
  "validations": [],
  "relations": {
    "products": {
      "type": "hasMany",
      "model": "Product",
      "foreignKey": "wineryId",
      "description": "the winery has many products"
    },
    "region": {
      "type": "belongsTo",
      "model": "Region",
      "foreignKey": "regionId",
      "description": "the winery belongs to region"
    }

  },
  "acls": [],
  "methods": {}
}
