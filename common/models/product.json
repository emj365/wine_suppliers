{
  "name": "Product",
  "plural": "Products",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "forceId": true,
  "mixins": {
    "Timestamp": {}
  },
  "replaceOnPUT": true,
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "year": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "type": {
      "type": "belongsTo",
      "model": "Type",
      "foreignKey": "typeId",
      "description": "the listing types of wine"
    },
    "winery": {
      "type": "belongsTo",
      "model": "Winery",
      "foreignKey": "wineryId",
      "description": "the listing wineries"
    },
    "grapes": {
      "type": "referencesMany",
      "model": "Grape",
      "foreignKey": "grapeIds",
      "description": "the types of grapes contained in this wine"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "uploadFile": {
      "accepts": [
        {"arg": "req", "type": "object", "http": {"source": "req"}},
        {"arg": "res", "type": "object", "http": {"source": "res"}}
      ],
      "returns": [{"arg":"result", "type": "object"}],
      "description": "Upload csv file",
      "http": [
        {
          "path": "/upload",
          "verb": "post"
        }
      ]
    }
  }
}
